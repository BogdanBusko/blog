%header
  .title
    = link_to 'PROGRAMMING@GEEKS', root_url
  .search
    = form_tag root_url, method: :get do
      = text_field_tag :search
      = submit_tag "Search"
  .registration
    - if !user_signed_in?
      = link_to 'Sign In', new_user_session_url
      |
      = link_to 'Sign Up', new_user_registration_url
    - else
      = link_to current_user.username, profiles_url
      |
      = link_to 'Sign Out', destroy_user_session_url, method: :delete
